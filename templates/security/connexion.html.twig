{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="../assets/css/security.css">{% endblock %}

{% block body %}
    <div class="connexion">
        <div class="container">
            <h1>Pour une meilleure exp√©rience sur le site </h1>

            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('security_connexion') }}" method="post">
                <div class="form-group">
                    <input placeholder="Adresse email..." requied name="_username" 
                    type="text" class="form-control">
                </div>
                <div class="form-group">
                    <input placeholder="Mode de passe..." requied name="_password"
                    type="password" class="form-control">
                </div>
                <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion</button>
                </div>
            </form>
         </div>
    </div>
{% endblock %}