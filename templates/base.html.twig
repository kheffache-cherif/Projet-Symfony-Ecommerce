<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
       
        <title>{% block title %}Welcome!{% endblock %}</title>
       {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        
    </head>
    <body>

        <nav class="navbar navbar-expand-sm navbar-dark bg-primary mb-3">
            <div class="container">
                <a href="/" class="navbar-brand">MultimidiaShop</a>
                <button class="navbar-toggler" type="button" data-
                toggle="collapse" data-target="#mobile-nav">
                <span class="navbar-toggle-icon"></span>
                </button>
                    <div class="collapse navbar-collapse" id="mobile-nav">
                     <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="/Articles" class="nav-link">Liste_articles</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link" href="{{ path('cart_index') }}">Panier</a>
                            </li>
                    {% if is_granted('ROLE_EDITOR') %}
                        <li class="nav-item">
                            <a href="{{ path('new_article')}}" class="nav-link">Ajouter article</a>                
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('new_categorie')}}" class="nav-link">Ajouter catégorie</a>
                        </li>
                    {% endif %}
                        <li class="nav-item">
                            <a href="{{ path('article_par_cat')}}" class="nav-link">Recherche par catégorie</a>
                        </li>
                        <li class="nav-item">
                            <a href="{{path('article_par_prix')}}" class="nav-link">Recherche par prix</a>
                        </li>
            
                    {% if not app.user %}
                        <li class="nav-item">
                            <a href="{{ path('security_inscription')}}" class="nav-link">Inscription</a>
                        </li>
                        <li class="nav-item">
                             <a href="{{ path('security_connexion')}}" class="nav-link">Connexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                             <a href="{{ path('security_deconnexion')}}" class="nav-link">Déconnexion</a>
                        </li>
                    {% endif %}
                     {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                        <a href="{{ path('admin_utilisateurs')}}" class="nav-
                        link">Administration</a>
                        </li>
                     {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        <div class ="container">  <!-- pour dire que toutes les modifications seront pour tout le body-->
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
